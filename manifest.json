{
  "manifest_version": 3,
  "name": "Quack",
  "version": "22.12.15",
  "description": "No echo chambers.",
  "author": "phrazzld",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "icons": {
    "16": "images/transparent_logo_16.png",
    "32": "images/transparent_logo_32.png",
    "64": "images/transparent_logo_64.png",
    "128": "images/transparent_logo_128.png",
    "256": "images/transparent_logo_256.png",
    "512": "images/transparent_logo_512.png"
  }
}
